datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

model Session {
  key   String @id
  value String

  @@map("sessions")
}

model User {
  id       Int    @id
  username String
  lists    List[] @relation(references: [id])

  @@map("users")
}

model List {
  id        Int      @id @default(autoincrement())
  userId    Int? // DEPRECATED
  name      String
  specialId String? // Samometer special lists Id
  tracking  Boolean  @default(true)
  createdAt DateTime @default(now())
  deleted   Boolean  @default(false)
  users     User[]   @relation(references: [id])
  deals     Deal[]
  invites   Invite[]

  @@map("lists")
}

model Deal {
  id        Int       @id @default(autoincrement())
  name      String
  list      List      @relation(fields: [listId], references: [id])
  listId    Int
  createdAt DateTime  @default(now())
  doneAt    DateTime?
  deleted   Boolean   @default(false)

  @@map("deals")
}

model Invite {
  id        Int      @id @default(autoincrement())
  guid      String   @db.Char(36)
  list      List     @relation(fields: [listId], references: [id])
  listId    Int
  createdAt DateTime @default(now())

  @@index([guid])
  @@map("invites")
}
